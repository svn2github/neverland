<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nmgc_lg_width"
    android:layout_height="@dimen/nmgc_lg_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nmgc_alert_title_border" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/nmgc_lg_x_margin_left"
            android:contentDescription="@string/nmgc_global_title"
            android:src="@drawable/nmgc_x"
            android:visibility="gone" />

        <TextView
            style="@style/nmgc_login_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/nmgc_alert_title"
            android:text="@string/nmgc_global_title"
            android:textSize="@dimen/nmgc_login_title_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/nmgc_alert_content_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/nmgc_alert_button_bottom"
            android:id="@+id/nmgc_alert_1"
            android:layout_marginLeft="@dimen/nmgc_lg_input_margin"
            android:layout_marginRight="@dimen/nmgc_lg_input_margin"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nmgc_alert_middle"
                style="@style/nmgc_login_button_text"
                android:layout_width="@dimen/nmgc_lg_button_width"
                android:layout_height="@dimen/nmgc_lg_button_height"
                android:layout_marginRight="@dimen/nmgc_lg_button_margin"
                android:background="@drawable/nmgc_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/nmgc_global_queding"
                android:textSize="@dimen/nmgc_lg_button_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/nmgc_lg_input_margin"
            android:layout_marginRight="@dimen/nmgc_lg_input_margin"
            android:layout_marginTop="@dimen/nmgc_alert_content_margin_top"
            android:layout_above="@+id/nmgc_alert_1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nmgc_alert_content"
                style="@style/nmgc_login_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/nmgc_lg_input_text_margin"
                android:layout_marginRight="@dimen/nmgc_lg_input_text_margin"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/nmgc_lg_input_text_size" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>