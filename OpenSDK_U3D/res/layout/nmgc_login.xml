<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nmgc_lg_width"
    android:layout_height="@dimen/nmgc_lg_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nmgc_alert_title_border">
        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/nmgc_lg_x_margin_left"
            android:layout_centerVertical="true"
            android:contentDescription="@string/nmgc_global_title"
            android:src="@drawable/nmgc_x" />
        <TextView
            style="@style/nmgc_login_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/nmgc_lg_loginaccount"
            android:textSize="@dimen/nmgc_login_title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/nmgc_alert_content_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nmgc_lg_input_height"
            android:layout_marginLeft="@dimen/nmgc_lg_input_margin"
            android:layout_marginRight="@dimen/nmgc_lg_input_margin"
            android:layout_marginTop="@dimen/nmgc_lg_input_first_margin"
            android:background="@drawable/nmgc_input_border"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/nmgc_login_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/nmgc_lg_input_text_margin"
                android:layout_marginRight="@dimen/nmgc_lg_input_text_margin"
                android:gravity="center"
                android:text="@string/nmgc_lg_account"
                android:textSize="@dimen/nmgc_lg_input_text_size" />

            <EditText
                android:id="@+id/nmgc_login_account"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="@string/nmgc_lg_account_hint"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/nmgc_lg_input_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nmgc_lg_input_height"
            android:layout_marginLeft="@dimen/nmgc_lg_input_margin"
            android:layout_marginRight="@dimen/nmgc_lg_input_margin"
            android:layout_marginTop="@dimen/nmgc_lg_input_first_margin"
            android:background="@drawable/nmgc_input_border"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/nmgc_login_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/nmgc_lg_input_text_margin"
                android:layout_marginRight="@dimen/nmgc_lg_input_text_margin"
                android:gravity="center"
                android:text="@string/nmgc_lg_password"
                android:textSize="@dimen/nmgc_lg_input_text_size" />

            <EditText
                android:id="@+id/nmgc_login_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="16"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/nmgc_lg_input_text_size" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nmgc_lg_divider_margin_bottom"
            android:layout_marginLeft="@dimen/nmgc_lg_input_margin"
            android:layout_marginRight="@dimen/nmgc_lg_input_margin"
            android:layout_marginTop="@dimen/nmgc_lg_divider_margin_top"
            android:scaleType="fitXY"
            android:src="@drawable/nmgc_loading_divider" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/nmgc_lg_input_margin"
            android:layout_marginRight="@dimen/nmgc_lg_input_margin"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/nmgc_login_register"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/nmgc_lg_button_height"
                android:layout_marginRight="@dimen/nmgc_lg_button_margin"
                android:background="@drawable/nmgc_button_selector"
                style="@style/nmgc_login_button_text"
                android:textSize="@dimen/nmgc_lg_button_text_size"
                android:text="@string/nmgc_lg_register"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/nmgc_login_ok"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/nmgc_lg_button_height"
                android:layout_marginLeft="@dimen/nmgc_lg_button_margin"
                android:background="@drawable/nmgc_button_selector"
                style="@style/nmgc_login_button_text"
                android:textSize="@dimen/nmgc_lg_button_text_size"
                android:text="@string/nmgc_lg_login"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>