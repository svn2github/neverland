<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nmgc_charge_height"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nmgc_alert_title_border"
            android:gravity="center" >

            <TextView
                style="@style/nmgc_login_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nmgc_charge_yuanbaochognzhi"
                android:textSize="@dimen/nmgc_login_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/nmgc_alert_content_border"
            android:gravity="center"
            android:orientation="vertical" >
            
            <LinearLayout 
                android:layout_marginTop="@dimen/nmgc_charge_index_margin_top"
                android:layout_marginLeft="@dimen/nmgc_charge_index_margin"
                android:layout_marginRight="@dimen/nmgc_charge_index_margin"
                android:id="@+id/nmgc_charge_inforoot"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	style="@style/nmgc_common_text"
                	android:id="@+id/nmgc_charge_info1"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:text="@string/nmgc_charege_info1"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/nmgc_charge_info_maxwidth"
                    style="@style/nmgc_common_text"
                	android:layout_height="wrap_content"
                	android:id="@+id/nmgc_charge_username"
                	android:text="@string/nmgc_charge_empty"
                	android:textColor="#079abf"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:singleLine="true"/>
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginLeft="@dimen/nmgc_charge_info_margin_left"
                	style="@style/nmgc_common_text"
                	android:id="@+id/nmgc_charge_info2"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:text="@string/nmgc_charege_info2"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/nmgc_charge_info_maxwidth"
                	android:layout_height="wrap_content"
                	style="@style/nmgc_common_text"
                	android:id="@+id/nmgc_charge_balance"
                	android:textColor="#079abf"
                	android:text="@string/nmgc_charge_empty"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:singleLine="true"/>
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	style="@style/nmgc_common_text"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:text="@string/nmgc_charge_yuanbao"/>
            </LinearLayout>
            
            <LinearLayout 
                android:layout_marginTop="@dimen/nmgc_charge_index_margin_top"
                android:layout_marginLeft="@dimen/nmgc_charge_index_margin"
                android:layout_marginRight="@dimen/nmgc_charge_index_margin"
                android:id="@+id/nmgc_charge_need_root"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	style="@style/nmgc_common_text"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:text="@string/nmgc_charge_info3"/>
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:id="@+id/nmgc_charge_needs"
                	style="@style/nmgc_common_text"
                	android:text="@string/nmgc_charge_empty"
                	android:textColor="#079abf"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:singleLine="true"/>
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	style="@style/nmgc_common_text"
                	android:textSize="@dimen/nmgc_charge_index_text_size"
                	android:text="@string/nmgc_charge_yuanbao"/>
            </LinearLayout>

            <!-- index -->

            <RadioGroup
                android:id="@+id/nmgc_button_all"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/nmgc_charge_index_height"
                android:layout_marginLeft="@dimen/nmgc_charge_index_margin"
                android:layout_marginRight="@dimen/nmgc_charge_index_margin"
                android:layout_marginTop="@dimen/nmgc_charge_index_margin_top"
                android:background="@drawable/nmgc_charge_index_border"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/nmgc_button_left"
                    style="@style/nmgc_common_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nmgc_charge_index_button_left_selector"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/nmgc_charge_phonecharge"
                    android:textSize="@dimen/nmgc_charge_index_text_size" />

                <RadioButton
                    android:id="@+id/nmgc_button_middle"
                    style="@style/nmgc_common_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nmgc_charge_index_button_middle_selector"
                    android:button="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/nmgc_charge_zhifubao"
                    android:textSize="@dimen/nmgc_charge_index_text_size" />

                <RadioButton
                    android:id="@+id/nmgc_button_right"
                    style="@style/nmgc_common_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nmgc_charge_index_button_right_selector"
                    android:button="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/nmgc_charge_caifutong"
                    android:textSize="@dimen/nmgc_charge_index_text_size" />
            </RadioGroup>

            <!-- content <include layout="@layout/nmgc_charge_zhifubao" /> -->

            <LinearLayout
                android:id="@+id/nmgc_content_card"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent" >

                <include layout="@layout/nmgc_charge_phonecard" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nmgc_content_other"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:visibility="gone" >

                <include layout="@layout/nmgc_charge_zhifubao" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>