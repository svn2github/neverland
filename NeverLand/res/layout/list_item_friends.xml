<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:minHeight="@dimen/list_item_height"
	android:paddingTop="@dimen/list_item_margin_top" 
	android:paddingRight="@dimen/list_item_margin_left"
	android:paddingLeft="@dimen/list_item_margin_right"
	android:paddingBottom="@dimen/list_item_margin_bottom"
	android:descendantFocusability="blocksDescendants">
	<RelativeLayout android:id="@+id/h1"
		android:layout_width="@dimen/head_icon_bg_width" android:layout_height="@dimen/head_icon_bg_height"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:background="@drawable/item_icon_bg">
		<ImageView style="@style/Normal_ImageView" android:id="@+id/image"
		    android:layout_width="@dimen/head_icon_to_save_width"
		    android:layout_height="@dimen/head_icon_to_save_width"
			android:src="@drawable/item_default_avatar_male"
			android:layout_centerInParent="true" android:background="@null" />
	</RelativeLayout>
	
	<Button style="@style/ListItemButton.fourWordButton" 
		android:text="@string/delete_friend" android:id="@+id/btn_del">
	</Button>
	
	<LinearLayout android:layout_width="wrap_content"
		android:layout_toRightOf="@id/h1" android:layout_toLeftOf="@id/btn_del"
		android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_marginLeft="@dimen/list_item_text_margin_image"
		android:layout_marginRight="@dimen/list_item_middle_margin_right">
		<TextView style="@style/ListItemText.nameText"
			android:id="@+id/friend_name" 
			android:drawableLeft="@drawable/sex_male_light"
			android:drawablePadding="@dimen/list_item_name_margin_sex"/>
		<TextView style="@style/ListItemText.profileText"
			android:id="@+id/friend_level"></TextView>
		<TextView style="@style/ListItemText.profileText2" 
			android:id="@+id/friend_dynamic" android:visibility="gone"></TextView>
	</LinearLayout>
</RelativeLayout>
