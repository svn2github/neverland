<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/ListView01"
        style="@style/Normal_List"
        android:paddingBottom="@dimen/list_padding_bottom"
        android:layout_marginTop="@dimen/content_margin_title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/rg_header"
            layout="@layout/inc_topbar" />

        <include
            android:id="@+id/R1"
            layout="@layout/inc_loading_full" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_btn_group"
        android:layout_width="@dimen/msg_user_bottom_width"
        android:layout_height="@dimen/msg_user_bottom_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottom_button_group_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/person_page_bottom_button_group_padding_left"
        android:paddingRight="@dimen/person_page_bottom_button_group_padding_right"
        android:paddingTop="@dimen/person_page_bottom_button_group_padding_top" >

        <TextView
            android:id="@+id/newLetterText"
            style="@style/PersonPage.BottomButton"
            android:drawableLeft="@drawable/bottom_leave_msg_btn_selector"
            android:drawablePadding="@dimen/leaveMsg_drawable_padding"
            android:text="@string/person_bottom_btn_leave_msg" />
    </LinearLayout>

</RelativeLayout>