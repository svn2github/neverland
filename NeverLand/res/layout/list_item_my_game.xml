<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:minHeight="@dimen/list_item_height"
	android:paddingRight="@dimen/list_item_margin_right"
	android:paddingLeft="@dimen/list_item_margin_left">
	<RelativeLayout android:id="@+id/h1"
	    android:layout_width="@dimen/head_icon_bg_width" 
	    android:layout_height="@dimen/head_icon_bg_height"
		android:layout_marginTop="@dimen/list_item_margin_top"
		android:background="@drawable/item_icon_bg" 
		android:layout_centerVertical="true">
		<ImageView style="@style/Normal_ImageView" android:id="@+id/image"
		    android:layout_width="@dimen/head_icon_to_save_width"
		    android:layout_height="@dimen/head_icon_to_save_width"
			android:src="@drawable/item_default_avatar_male"
			android:layout_centerInParent="true" android:background="@null" />
	</RelativeLayout>
	<LinearLayout android:id="@+id/line1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:orientation="vertical"
		android:layout_toRightOf="@id/h1" android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/list_item_text_margin_image">
		<TextView android:id="@+id/name" style="@style/IconText.ListItemTitle"
			android:textSize="@dimen/list_title_text_size"  />
		<TextView android:id="@+id/content" style="@style/IconText.ListItemProfile"
			android:textSize="@dimen/list_profile_text_size" />
	</LinearLayout>

	<RelativeLayout android:layout_width="@dimen/mygame_score_width"
		android:layout_height="wrap_content" android:layout_centerVertical="true"
		android:layout_alignParentRight="true" >
		<ImageView android:id="@+id/fav" style="@style/Normal_ImageView"
		    android:src="@drawable/item_favourite_bg"
			android:layout_alignParentRight="true" />

		<RelativeLayout android:id="@+id/linear01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerInParent="true">
			<TextView android:id="@+id/score" style="@style/PersonPage.gameScore"
				android:drawableTop="@drawable/item_achieve_light"
				android:gravity="center_horizontal"
				android:layout_centerInParent="true" />
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>