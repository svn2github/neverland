<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="@dimen/list_item_height"
    android:paddingBottom="@dimen/list_item_notice_attach_padding_bottom"
    android:paddingLeft="@dimen/list_item_margin_left"
    android:paddingRight="@dimen/list_item_feed_margin_right"
    android:paddingTop="@dimen/list_item_feed_margin_top" >

    <RelativeLayout
        android:id="@+id/h1"
        android:layout_width="@dimen/head_icon_bg_width"
        android:layout_height="@dimen/head_icon_bg_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/item_icon_bg" >

        <ImageView
            android:id="@+id/head"
            style="@style/Normal_ImageView"
            android:layout_width="@dimen/head_icon_to_save_width"
            android:layout_height="@dimen/head_icon_to_save_width"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/item_default_avatar_male" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/list_item_feed_reply_margin_top"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/icon_reply_selector" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_text_margin_image"
        android:layout_toRightOf="@id/h1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poster_name"
            style="@style/ListItemText.PersonName"
            android:textSize="@dimen/list_title_text_size" />

        <TextView
            android:id="@+id/content"
            style="@style/ListItemText.Content"
            android:layout_marginRight="@dimen/list_item_notice_content_margin_right"
            android:layout_marginTop="@dimen/list_item_notice_content_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/list_title_text_size" />

        <TextView
            android:id="@+id/textView1"
            style="@style/ListItemText.FeedOriginal"
            android:layout_marginRight="@dimen/notice_list_item_txt_margin_right"
            android:layout_marginTop="@dimen/list_item_notice_original_marginTop" />

        <RelativeLayout
            android:id="@+id/info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/list_item_margin_right"
            android:layout_marginTop="@dimen/list_item_feed_content_margin_top"
            android:visibility="gone" >

            <TextView
                android:id="@+id/comment"
                style="@style/ListItemText.FeedComment"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:id="@+id/review_info"
                android:layout_width="@dimen/hot_post_comment_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/reply_title"
                    style="@style/ListItemText.NoticeTime"
                    android:gravity="left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/forum_post_divider_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/forum_post_info_divider" />

                <TextView
                    android:id="@+id/review_title"
                    style="@style/ListItemText.NoticeTime"
                    android:layout_marginLeft="@dimen/forum_post_divider_margin"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                style="@style/ListItemText.NoticeTime"
                android:layout_alignParentRight="true"
                android:gravity="right" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>