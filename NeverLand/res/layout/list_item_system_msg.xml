<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:minHeight="@dimen/list_item_height"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/list_item_margin_left"
	android:paddingRight="@dimen/list_item_margin_right">
	<TextView android:id="@+id/textView2" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:textSize="@dimen/list_title_text_size"
		android:textColor="@color/black" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"/>

	<TextView android:id="@+id/textView1" style="@style/Normal_TextView"
		android:layout_alignParentRight="true" android:textSize="@dimen/list_profile_text_size"
		android:textColor="@color/gray" android:layout_alignParentBottom="true" 
		android:layout_below="@id/textView2" />
</RelativeLayout>
