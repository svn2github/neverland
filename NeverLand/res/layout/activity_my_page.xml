<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <LinearLayout android:id="@+id/contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/title_bar_bg_padding_height" 
        android:orientation="vertical">

        <ListView
            android:id="@+id/ListView01"
            style="@style/Normal_List"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_margin_left"
            android:layout_marginRight="@dimen/list_item_margin_right"
            android:paddingBottom="@dimen/iist_item_notice_padding_bottom"
            android:background="@drawable/item_bottom_bg"
            android:divider="@drawable/item_divider_dotted" 
            android:transcriptMode="alwaysScroll"/>

        <TextView
            android:id="@+id/no_data_tip"
            style="@style/LoadingBar.LoadingResult"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/list_item_margin_left"
            android:layout_marginRight="@dimen/list_item_margin_right"
            android:background="@drawable/item_down_bg"
            android:text="@string/no_feed_tip"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/rg_header"
            layout="@layout/inc_topbar" />

        <include
            android:id="@+id/R1"
            layout="@layout/inc_loading_full" />
    </LinearLayout>
</RelativeLayout>