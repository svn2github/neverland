<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:paddingLeft="@dimen/list_item_margin_right"
    android:paddingRight="@dimen/list_item_margin_left"
    android:paddingTop="@dimen/list_item_margin_top" >

    <ImageView
        android:id="@+id/lb_icon"
        style="@style/Normal_ImageView"
        android:layout_width="@dimen/head_icon_to_save_width"
        android:layout_height="@dimen/head_icon_to_save_width"
        android:src="@drawable/item_default_avatar_male" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_text_margin_image"
        android:layout_toRightOf="@id/lb_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lb_name"
            style="@style/IconText.ListItemTitle"
            android:textSize="@dimen/list_title_text_size" >
        </TextView>

        <TextView
            android:id="@+id/lb_profile"
            style="@style/IconText.ListItemProfile"
            android:textSize="@dimen/list_profile_text_size" >
        </TextView>
    </LinearLayout>

</RelativeLayout>