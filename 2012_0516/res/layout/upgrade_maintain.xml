<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:orientation="vertical"
  android:layout_height="match_parent" android:background="@android:color/white"
  >
 <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
	 android:background="@null">	
  	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" 
  		android:orientation="vertical">
	    <TextView android:text="@string/upgrade_maintain_title" android:layout_width="fill_parent"
		  	android:layout_height="30dip" android:textSize="15dip" android:background="@android:color/darker_gray" 
		  	android:textColor="@android:color/black" android:gravity="center"/>
		<ImageView android:src="@drawable/upgrade_maintain" android:layout_width="150dip"
			android:layout_marginTop="60dip"
		  	android:layout_height="150dip" android:layout_gravity="center_horizontal"/>
	  	<LinearLayout android:layout_width="fill_parent" android:layout_height="match_parent"
	  		android:gravity="center">
		  <TextView   
		  	android:id="@+id/upgrade_tv_maintain_msg"
		  	android:layout_width="match_parent"
		  	android:layout_height="match_parent" 
		  	android:textColor="@android:color/black"
		  	android:text="11111"
		  	android:gravity="center"
		  	android:layout_gravity="center"
		  	android:layout_marginTop="15dip"
		  	android:layout_marginBottom="20dip"
		  	/>
	  	</LinearLayout>
  	</LinearLayout>
  </ScrollView>
</LinearLayout>
