<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/content_list_head_padding_top" >

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/h1"
            android:layout_width="@dimen/big_avatar_bg_width"
            android:layout_height="@dimen/big_avatar_bg_height"
            android:background="@drawable/item_icon_bg" >

            <ImageView
                android:id="@+id/image"
                style="@style/Normal_ImageView"
                android:layout_width="@dimen/head_icon_big_width"
                android:layout_height="@dimen/head_icon_big_height"
                android:layout_centerInParent="true"
                android:src="@drawable/default_avatar_male" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_item_margin"
                android:layout_toRightOf="@id/h1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/info_margin_left_of_icon" >

                <TextView
                    android:id="@+id/name"
                    style="@style/IconText.NameTitle"
                    android:drawableLeft="@drawable/sex_male_light"
                    android:drawablePadding="@dimen/name_drawable_padding"
                    android:paddingLeft="@dimen/name_margin_left_of_icon" />

                <TextView
                    android:id="@+id/achieve_textView"
                    style="@style/IconText"
                    android:drawableLeft="@drawable/person_achive_icon"
                    android:drawablePadding="@dimen/name_drawable_padding" />

                <LinearLayout
                    android:id="@+id/level_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/info_item_margin"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/level_textView"
                        style="@style/IconText"
                        android:drawableLeft="@drawable/level_icon_light"
                        android:drawablePadding="@dimen/name_drawable_padding" />

                    <ProgressBar
                        android:id="@+id/progress_horizontal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/level_progress_width"
                        android:layout_height="@dimen/level_progress_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/progressbar_margin_left"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progressDrawable="@drawable/progressbar_background" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_layout"
        android:layout_marginTop="@dimen/person_page_button_group_margin_top"
        android:background="@drawable/big_button_bg_dark" >

        <LinearLayout
            android:id="@+id/btn_1"
            style="@style/Normal_LinearLayout.Vertical"
            android:layout_weight="1"
            android:background="@drawable/big_left_combine_button_bg_selector" >

            <TextView
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginTop="@dimen/person_page_button_group_margin_top"
                android:gravity="center_horizontal"
                android:text="@string/profile_page_game" />

            <TextView
                android:id="@+id/txt_1"
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginBottom="@dimen/person_page_button_group_margin_bottom"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/big_button_divider" />

        <LinearLayout
            android:id="@+id/btn_2"
            style="@style/Normal_LinearLayout.Vertical"
            android:layout_weight="1"
            android:background="@drawable/big_combine_button_bg_selector" >

            <TextView
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginTop="@dimen/person_page_button_group_margin_top"
                android:gravity="center_horizontal"
                android:text="@string/profile_page_post" />

            <TextView
                android:id="@+id/txt_2"
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginBottom="@dimen/person_page_button_group_margin_bottom"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/big_button_divider" />

        <LinearLayout
            android:id="@+id/btn_3"
            style="@style/Normal_LinearLayout.Vertical"
            android:layout_weight="1"
            android:background="@drawable/big_combine_button_bg_selector" >

            <TextView
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginTop="@dimen/person_page_button_group_margin_top"
                android:gravity="center_horizontal"
                android:text="@string/profile_page_letter" />

            <TextView
                android:id="@+id/txt_3"
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginBottom="@dimen/person_page_button_group_margin_bottom"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/big_button_divider" />

        <LinearLayout
            android:id="@+id/btn_4"
            style="@style/Normal_LinearLayout.Vertical"
            android:layout_weight="1"
            android:background="@drawable/big_right_combine_button_bg_selector" >

            <TextView
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginTop="@dimen/person_page_button_group_margin_top"
                android:gravity="center_horizontal"
                android:text="@string/profile_page_friend" />

            <TextView
                android:id="@+id/txt_4"
                style="@style/PersonPage.CombineButtonTitle"
                android:layout_marginBottom="@dimen/person_page_button_group_margin_bottom"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>