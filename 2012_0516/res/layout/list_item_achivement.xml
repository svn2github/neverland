<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:minHeight="@dimen/list_item_height"
	android:paddingLeft="@dimen/list_item_margin_left">
	
	<RelativeLayout android:id="@+id/h1"
	    android:layout_width="@dimen/head_icon_bg_width" 
	    android:layout_height="@dimen/head_icon_bg_height"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="@dimen/list_item_margin_top"
		android:background="@drawable/item_icon_bg">			
		<ImageView style="@style/Normal_ImageView" android:id="@+id/achieve_icon"
		    android:layout_width="@dimen/achieve_icon_to_save_width"
		    android:layout_height="@dimen/achieve_icon_to_save_width"
			android:src="@drawable/item_default_avatar_male"
			android:layout_centerInParent="true" android:background="@null" />
	</RelativeLayout>

	<TextView android:id="@+id/achievement_exp" 
	    style="@style/UserGameTextView.ScoreText"
	    android:maxWidth="@dimen/list_item_right_layout_width"
		android:layout_centerVertical="true" 
		android:layout_alignParentRight="true"
		android:gravity="center_horizontal"
		android:layout_marginRight="@dimen/list_item_margin_right"
		android:drawableTop="@drawable/item_achieve_dark"/>
	
	<LinearLayout 
		android:id="@+id/Linearlayout01" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/h1"  android:layout_toLeftOf="@id/achievement_exp"
		android:layout_marginLeft="@dimen/list_item_text_margin_image"
		android:orientation="vertical">
		<TextView android:id="@+id/achieve_name" style="@style/IconText.ListItemTitle"
			android:textSize="@dimen/list_title_text_size" />
		<TextView android:id="@+id/achieve_profile"
			android:maxLines="2" style="@style/IconText.ListItemProfile"
			android:textSize="@dimen/list_profile_text_size" />
	</LinearLayout>
	
</RelativeLayout>