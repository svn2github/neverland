<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/R1"
        layout="@layout/inc_loading_full" 
        android:layout_marginTop="@dimen/content_margin_title_bar"/>

    <RelativeLayout
        android:id="@+id/game_page_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/game_page_content_margin_top"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/linear01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/game_page_content_margin_left"
            android:layout_marginRight="@dimen/game_page_content_margin_right"
            android:layout_marginTop="@dimen/game_page_image_bg_margin_top" >

            <RelativeLayout
                android:id="@+id/h1"
                android:layout_width="@dimen/game_page_image_bg_width"
                android:layout_height="@dimen/game_page_image_bg_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/item_icon_bg" >

                <ImageView
                    android:id="@+id/game_image"
                    android:layout_width="@dimen/game_page_image_width"
                    android:layout_height="@dimen/game_page_image_height"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_buy"
                style="@style/ListItemText.ButtonText"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/game_page_buy_button_margin_top"
                android:gravity="center" />

            <RelativeLayout
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_page_txt_group_margin_left"
                android:layout_toLeftOf="@id/btn_buy"
                android:layout_toRightOf="@id/h1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/game_txt1"
                    style="@style/GamePage.PlayerNumText"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/game_fav" />

                <TextView
                    android:id="@+id/game_txt2"
                    style="@style/GamePage.PlayerNumText"
                    android:layout_below="@id/game_txt1"
                    android:layout_marginTop="@dimen/game_page_player_num_margin_top"
                    android:drawableLeft="@drawable/game_playing" />

                <TextView
                    android:id="@+id/game_txt3"
                    style="@style/GamePage.PlayerNumText"
                    android:layout_below="@id/game_txt2"
                    android:layout_marginTop="@dimen/game_page_player_num_margin_top"
                    android:drawableLeft="@drawable/game_played" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_chain_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/game_page_chain_fav"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear01"
            android:layout_marginLeft="@dimen/list_item_margin_left"
            android:layout_marginRight="@dimen/list_item_margin_right"
            android:layout_marginTop="@dimen/game_page_button_group_margin_top"
            android:background="@drawable/big_button_bg_dark" >

            <TextView
                android:id="@+id/btn_1"
                style="@style/GamePage.TabBtn"
                android:background="@drawable/big_left_combine_button_bg_selector"
                android:drawableLeft="@drawable/big_button_lb_selector"
                android:drawablePadding="@dimen/game_page_tab_button_drawable_padding"
                android:paddingLeft="@dimen/game_page_lb_button_padding_left"
                android:text="@string/game_page_leadboard" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/big_button_divider" />

            <TextView
                android:id="@+id/btn_2"
                style="@style/GamePage.TabBtn"
                android:background="@drawable/big_combine_button_bg_selector"
                android:drawableLeft="@drawable/big_button_achieve_selector"
                android:paddingLeft="@dimen/game_page_achieve_button_padding_left"
                android:text="@string/game_page_achievement" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/big_button_divider" />

            <TextView
                android:id="@+id/btn_3"
                style="@style/GamePage.TabBtn"
                android:background="@drawable/big_right_combine_button_bg_selector"
                android:drawableLeft="@drawable/big_button_forum"
                android:drawablePadding="@dimen/game_page_tab_button_drawable_padding"
                android:paddingLeft="@dimen/game_page_forum_button_padding_left"
                android:text="@string/game_page_fans" />
        </LinearLayout>

        <include
            android:id="@+id/invite_layout"
            android:layout_width="@dimen/game_page_item_width"
            android:layout_height="@dimen/game_page_player_layout_height"
            android:layout_below="@id/button_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/game_page_item_group_margin_top"
            layout="@layout/inc_person" />

        <LinearLayout
            android:id="@+id/line_btn"
            android:layout_width="@dimen/game_page_item_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/invite_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/game_page_item_group_margin_top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/btn_fav"
                style="@style/GamePage.BigBtn"
                android:background="@drawable/item_up_bg_selector"
                android:drawableLeft="@drawable/game_page_fav"
                android:text="@string/fans_club_mark" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/item_divider_dotted" />

            <TextView
                android:id="@+id/txt1"
                style="@style/GamePage.BigBtn"
                android:background="@drawable/item_middle_bg_selector"
                android:drawableLeft="@drawable/game_page_invite"
                android:text="@string/fans_club_invite" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/item_divider_dotted" />

            <TextView
                android:id="@+id/txt2"
                style="@style/GamePage.BigBtn"
                android:background="@drawable/item_down_bg_selector"
                android:drawableLeft="@drawable/game_page_other_game"
                android:text="@string/fans_club_other_games" />
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+android:id/progress_small_for_fav"
        style="@style/iosProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <include
        android:id="@+id/rg_header"
        layout="@layout/inc_topbar" />

</RelativeLayout>