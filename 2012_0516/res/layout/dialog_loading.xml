<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_progress_line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/alert_dialog_loading_width"
    android:minHeight="@dimen/alert_dialog_loading_height"
    android:background="@drawable/pop_loading_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+android:id/pop_progress_small"
        style="@style/iosProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/loading_txt"
        style="@style/LoadingBar.LoadingTxt" />

</LinearLayout>