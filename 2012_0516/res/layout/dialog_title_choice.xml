<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/alert_dialog_all_width"
    android:background="@drawable/pop_window_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleTextView"
        style="@style/DialogTitle"
        android:text="@string/pub_tip_dialog_title" />

    <LinearLayout
        android:id="@+id/choice_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alert_dialog_content_margin_left"
        android:layout_marginRight="@dimen/alert_dialog_content_margin_left"
        android:orientation="vertical"
        android:paddingBottom="@dimen/alert_dialog_choice_content_margin_bottom" >
    </LinearLayout>

</LinearLayout>