<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/no_post_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/title_bar_bg_padding_height"
        android:contentDescription="@string/key_no_data_tip"
        android:src="@drawable/no_post_tip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/title_bar_bg_padding_height"
        android:orientation="vertical" >

        <include
            android:id="@+id/R1"
            layout="@layout/inc_loading_full" />

        <ListView
            android:id="@+id/ListView01"
            style="@style/Normal_List" />
    </LinearLayout>

    <include
        android:id="@+id/rg_header"
        layout="@layout/inc_topbar" />

</RelativeLayout>