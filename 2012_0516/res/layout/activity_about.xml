<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/main_bg" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@null"
		android:layout_marginTop="@dimen/content_margin_title_bar">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="@dimen/about_scrollview_height"
			android:paddingTop="@dimen/about_scroll_view_margin_top">
			<TextView android:id="@+id/logo_nearme_gamecenter"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				style="@style/About.Title" android:layout_centerHorizontal="true" />
			<LinearLayout android:id="@+id/txt_line"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/about_content_margin_top"
				android:layout_centerHorizontal="true" android:layout_below="@id/logo_nearme_gamecenter"
				android:orientation="vertical">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:orientation="horizontal">
					<TextView android:layout_width="@dimen/about_content_title_width"
						android:layout_height="wrap_content" style="@style/About.Content"
						android:text="@string/about_version" />
					<TextView android:id="@+id/about_version"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						style="@style/About.Content" android:layout_marginLeft="@dimen/about_content_txt_margin_left" />
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:orientation="horizontal">
					<TextView android:layout_width="@dimen/about_content_title_width"
						android:layout_height="wrap_content" style="@style/About.Content"
						android:text="@string/about_web" />
					<TextView android:id="@+id/about_web"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						style="@style/About.Content" android:clickable="true"
						android:textColor="@color/about_blue"
						android:layout_marginLeft="@dimen/about_content_txt_margin_left" android:autoLink="web"/>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:orientation="horizontal">
					<TextView android:layout_width="@dimen/about_content_title_width"
						android:layout_height="wrap_content" style="@style/About.Content"
						android:text="@string/about_qq" />
					<TextView android:id="@+id/about_qq"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						style="@style/About.Content" android:layout_marginLeft="@dimen/about_content_txt_margin_left" />
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:orientation="horizontal">
					<TextView android:layout_width="@dimen/about_content_title_width"
						android:layout_height="wrap_content" style="@style/About.Content"
						android:text="@string/about_email" />
					<TextView android:id="@+id/about_email"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						style="@style/About.Content" android:clickable="true"
						android:textColor="@color/about_blue"
						android:layout_marginLeft="@dimen/about_content_txt_margin_left" android:autoLink="email"/>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:orientation="horizontal">
					<TextView android:layout_width="@dimen/about_content_title_width"
						android:layout_height="wrap_content" style="@style/About.Content"
						android:text="@string/about_weibo" />
					<TextView android:id="@+id/about_weibo"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						style="@style/About.Content" android:layout_marginLeft="@dimen/about_content_txt_margin_left" />
				</LinearLayout>
			</LinearLayout>
			
			<TextView android:id="@+id/about_help"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@id/txt_line"
				android:layout_centerHorizontal="true"
				android:textColor="@color/blue"
				android:text="@string/about_help"
				android:layout_marginTop="@dimen/about_help_margin_top"/>
			
			<LinearLayout android:id="@+id/copyright_line"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true" android:gravity="center_horizontal"
				android:layout_marginBottom="10dp" android:orientation="vertical"
				android:visibility="gone">
				<TextView android:id="@+id/about_com" android:layout_width="wrap_content"
					android:layout_height="wrap_content" style="@style/About.Content"
					android:layout_centerHorizontal="true" android:visibility="gone"
					 />
				<TextView android:id="@+id/about_copyright"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					style="@style/About.Content" android:layout_centerHorizontal="true"
					android:layout_marginTop="5px" />
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>
	
	<include layout="@layout/inc_topbar" android:id="@+id/top_bar" />
</RelativeLayout>
