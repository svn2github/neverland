<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/liear01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
    	android:paddingTop="@dimen/content_list_head_padding_top" >

        <RelativeLayout
            android:id="@+id/h1"
            android:layout_width="@dimen/head_icon_bg_width"
            android:layout_height="@dimen/head_icon_bg_height"
            android:background="@drawable/item_icon_bg" >

            <ImageView
                android:id="@+id/head"
                style="@style/Normal_ImageView"
                android:layout_width="@dimen/head_icon_to_save_width"
                android:layout_height="@dimen/head_icon_to_save_width"
                android:layout_centerInParent="true"
                android:src="@drawable/item_default_avatar_male" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forum_poster_name_margin_image"
            android:layout_marginRight="@dimen/list_item_margin_right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/poster_name"
                style="@style/ListItemText.PersonName"
                android:textSize="@dimen/forum_poster_name_txt_size" />

            <LinearLayout
                android:id="@+id/h2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/forum_poster_title_margin_name"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/post_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/forum_post_title_margin_flag"
                    android:src="@drawable/forum_flag_hot" />

                <TextView
                    android:id="@+id/post_title"
                    style="@style/ListItemText.PersonName"
                    android:singleLine="false"
                    android:textColor="@color/list_item_profile_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/originalTextView"
                style="@style/ListItemText.FeedOriginal"
                android:drawableLeft="@drawable/icon_feed_forum"
                android:layout_marginRight="@dimen/notice_list_item_txt_margin_right"
                android:layout_marginTop="@dimen/list_item_notice_original_marginTop"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liear01"
        android:layout_marginRight="@dimen/list_item_margin_right"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/forum_post_divider_margin_top"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_divider" />

        <TextView
            android:id="@+id/post_content"
            style="@style/ListItemText.Content"
            android:layout_marginTop="@dimen/forum_post_content_margin_divider"
            android:focusable="false" />

        <LinearLayout
            android:id="@+id/btn_more_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/forum_post_content_more_margin_bottom"
            android:layout_marginTop="@dimen/forum_post_more_margin_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/btn_word_more"
                android:layout_width="@dimen/btn_more_word_width"
                android:layout_height="@dimen/btn_more_word_height"
                android:background="@drawable/write_edit_available_input_bg"
                android:gravity="center"
                android:text="@string/forum_post_word_more"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_time_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/forum_post_info_margin_bottom"
            android:layout_marginTop="@dimen/forum_post_info_margin_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/reply_title"
                    style="@style/ListItemText.NoticeTime"
                    android:gravity="left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/forum_post_divider_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/forum_post_info_divider" />

                <TextView
                    android:id="@+id/review_title"
                    style="@style/ListItemText.NoticeTime"
                    android:layout_marginLeft="@dimen/forum_post_divider_margin"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                style="@style/ListItemText.NoticeTime"
                android:layout_width="fill_parent"
                android:layout_marginRight="@dimen/notice_list_item_txt_margin_right"
                android:layout_marginTop="@dimen/list_item_time_margin_top"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>